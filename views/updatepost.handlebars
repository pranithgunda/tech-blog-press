{{!-- handlebar to update a post --}}
<div id="blogPost">
    <div id="card" class="card mt-3">
        <div class="card-header">Edit Post</div>
        <div class="card-body">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" value="{{{blog.title}}}">
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <textarea class="form-control" id="content" rows="3">{{blog.content}}</textarea>
            </div>
            <div class="form-group">
                <button type="button" class="btn" id="updatePost" data-userid={{user_id}}
                    data-blogid="{{blog.id}}">Update Post</button>
            </div>
            <div class="form-group">
                <button type="button" class="btn" id="deletePost" data-blogid={{blog.id}}>Delete Post</button>
            </div>
        </div>
    </div>
</div>
<script src="/js/updatepost.js"></script>