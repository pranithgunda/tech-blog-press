{{!-- handlebars to create a new blog post --}}
<div>
    <div id="card" class="card mt-3">
        <div class="card-header">Create New Post</div>
        <div class="card-body">
            <div class="form-group">
                <label for="newTitle">Title</label>
                <input type="text" class="form-control" id="newTitle">
            </div>
            <div class="form-group">
                <label for="newContent">Content</label>
                <textarea class="form-control" id="newContent" row="3"></textarea>
            </div>
            <div class="form-group">
                <button type="button" class="btn" id="createNewPost" data-userid={{user_id}}>Create</button>
            </div>
        </div>
    </div>
</div>
<script src="/js/newpost.js"></script>